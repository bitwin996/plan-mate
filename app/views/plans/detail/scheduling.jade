p
  .text-center.row(ng-show="dateProposals.length == 0")
    em.text-muted No date offer.

  ul.list-group
    li.list-group-item.row(ng-repeat="dateProposal in dateProposals | orderBy:'date'")
      .text-left.col-xs-8
        //{{ dateProposal.date | date:'MM-dd-yy' }}
        {{ dateProposal.date | amDateFormat:'ddd, MMM D' }}
        br
        | offered by {{ dateProposal.proposer.name }}
        br
        //span.glyphicon.glyphicon-ok
        | available &nbsp;
        {{ dateProposal.availableUsers.length }}
        | &nbsp;
        //span.glyphicon.glyphicon-remove
        | unavailable &nbsp;
        {{ dateProposal.unavailableUsers.length }}

      .text-center.col-xs-4
        button.btn.btn-primary(ng-disabled="!dateProposal.canBeAvailable", ng-click="addToAvailable(dateProposal)") Available
        | &nbsp;
        button.btn.btn-danger(ng-disabled="!dateProposal.canBeUnavailable", ng-click="addToUnavailable(dateProposal)") Unavailable


p.row
  form(ng-submit="addDateProposal(newDateProposal)")
    //.form-group
      div(ng-model="date", style="width:280px")
        datepicker

    .form-group
      input.input-block-level(type="text",
        ng-model="newDateProposal.date",
        is-open="opened",
        date-disabled="datePicker.disabled(date,mode)",
        ng-required="true",
        min="datePicker.config.min",
        max="datePicker.config.max",
        datepicker-popup="EEE, MMM dd",
        placeholder="Click here to open date picker"
        )
      | &nbsp;
      button.btn.btn-primary(type="submit") Add



    //label.control-label(for="activity.start_at") Date:
    //.form-horizontal
      input(type="text",
          ng-model="newDateProposal.date",
          datepicker-popup="{{dateFormat}}",
          is-open="datePicker.opened",
          min="datePicker.minDate",
          max="datePicker.maxDate",
          datepicker-options="datePicker.dateOptions",
          date-disabled="disabled(date, mode)",
          placeholder="Date: {{minDate | date:dateFormat}}"
        )
      button.btn(ng-click="datePicker.opened = true")
        span.glyphicon.glyphicon-calendar

